<header>
    <nav>
        <ul class="main-nav">
            <li><h1>GatorTube</h1></li>
            <input type="text" placeholder="Search">
            {{#if this.isLogged}}
                <li><a href="/postvideo" class="post">Post</a></li>
                <li><a href="/users/{{user.userId}}" class="account">Hi, {{user.username}}</a></li>
                <li><a href="#" class="logout" onclick="document.getElementById('logout-form').submit(); return false;">Log Out</a></li>
                <form id="logout-form" action="/users/logout" method="post" style="display: none;"></form>
            {{else}}
                <li><a href="/registration" class="post">Post</a></li>
                <li><a href="/registration" class="register">Register</a></li>
                <li><a href="/login" class="login">Login</a></li>
            {{/if}}
        </ul>
    </nav>
</header>