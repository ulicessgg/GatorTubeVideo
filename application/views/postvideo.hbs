<main>
    <h2>Post</h2>
    <div class="upload-form">
        <form action="/posts/create" method="post" enctype="multipart/form-data">
            <div class="upload-item">
                <label for="title">Post Title:</label>
                <input type="text" name="title" id="title" placeholder="Title" required />
            </div>

            <div class="upload-item">
                <label for="description">Post Description:</label>
                <input type="text" name="description" id="description" placeholder="Description" required />
            </div>

            <div class="upload-video">
                <label for="video">Upload Video:</label>
                <input type="file" name="videoUpload" id="video" accept="video/*" required />
            </div>
            
            <div class="upload-box">
                <label for="aup">I accept to the <a href="#" class="aup">Acceptable Use Policy</a></label>
                <input type="checkbox" name="aup" id="aup" required />
            </div>

            <div class="upload-button">
                <button class="post-button" type="submit">Post</button>
                <button class="reset-button" type="reset">Clear</button>
            </div>
        </form>
    </div>
</main>